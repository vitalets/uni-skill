{
  "name": "uni-skill",
  "description": "Universal interface for voice assistant skills",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "core",
    "alice",
    "sber",
    "marusya",
    "alexa"
  ],
  "scripts": {
    "lint": "eslint '{core,alice,sber,marusya,alexa}/{src,test}/**/*.ts' --ext .ts",
    "test": "npm run build -w core && npm t -ws",
    "build": "npm run build -ws",
    "check": "npm run build && tsnd --respawn scripts/check",
    "release": "npm run lint && npm t && npm run build && lerna version && lerna publish"
  },
  "lint-staged": {
    "{core,alice,sber,marusya,alexa}/{src,test}/**/*.ts": "eslint --ext .ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ask-cli": "^2.24.1",
    "ask-sdk-local-debug": "^1.1.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-plugin-mocha": "^9.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.0",
    "mocha": "^9.1.2",
    "sinon": "^11.1.1",
    "skill-dev-proxy": "^2.0.13",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "author": {
    "name": "Vitaliy Potapov"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/uni-skill.git"
  },
  "license": "MIT"
}
