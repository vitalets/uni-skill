{
  "name": "uni-skill",
  "description": "Universal interface for voice assistant skills",
  "version": "3.0.3",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test --ext .ts",
    "test:l": "mocha -r ts-node/register test/setup.ts 'test/specs/**/*.ts'",
    "test": "LOG_LEVEL=fatal npm run test:l",
    "check": "tsnd --respawn scripts/check",
    "check:alexa": "tsc -p tsconfig.alexa.json --watch & ask run --watch --region EU && kill $!",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "release": "npm run lint && npm t && npm run build && npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint --ext .ts"
  },
  "dependencies": {
    "@salutejs/types": "^0.7.0",
    "alice-types": "^1.3.0",
    "ask-sdk-core": "^2.11.0",
    "ask-sdk-model": "^1.36.1",
    "marusya-types": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ask-cli": "^2.24.1",
    "ask-sdk-local-debug": "^1.1.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.24.0",
    "eslint-plugin-mocha": "^9.0.0",
    "lint-staged": "^11.2.0",
    "mocha": "^9.1.2",
    "sinon": "^11.1.1",
    "skill-dev-proxy": "^2.0.13",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "author": {
    "name": "Vitaliy Potapov"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/uni-skill.git"
  },
  "license": "MIT"
}
